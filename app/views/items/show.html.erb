<% unless current_user.nil? %>
<p>ログインユーザー：<%= @user.email %></p>
<% end %>

<h1>商品詳細</h1>

<p><%= @item.id %></p>
<p><%= @item.name %></p>
<p><%= @item.title %></p>
<p><%= @item.stock %></p>

<% unless current_user.nil? %>　<%# ログインユーザー有無で表示切り替え%>

  <%= form_for(@cart, url:carts_path) do |f|%>
   <%= number_field_tag(:count, @cart.count) %>
   <%= f.hidden_field :item_id, value:@item.id %>
   <%= f.submit %>
  <% end %>

<% end %>
<br>
<%= link_to "戻る", :back %>

